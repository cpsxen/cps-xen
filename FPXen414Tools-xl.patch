+/* Get domain-parameters for the FP-Scheduler. */
+int libxl_sched_fp_domain_get(libxl_ctx *ctx, uint32_t domid, libxl_sched_fp *scinfo)
+{
+    struct xen_domctl_sched_fp sdom;
+    int rc;
